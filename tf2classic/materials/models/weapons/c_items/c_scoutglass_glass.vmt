"VertexlitGeneric"
{
	"$basetexture" "models/weapons/c_items/c_scoutglass_glass"

	"$envmap" "env_cubemap"
	"$envmapcontrast" 1
	"$envmaptint" "[.3 .3 1]"
	"$envmapsaturation" 0.5
	"$nocull" "1"
	"$phong" "1"
	"$phongexponent" "200"
	"$phongboost" "7.5"
	"$phongfresnelranges"	"[.2 .4 .8]"

	"$lightwarptexture" "models/player/pyro/pyro_lightwarp"

	"$rimlight" "1"						
	"$rimlightexponent" "2"				
	"$rimlightboost" "0.2"

	"360?$color2" "[ 0.5 0.5 0.5 ]"

	"$glowcolor" "1"

	// Cloaking
	"$cloakPassEnabled" "1"
	"$sheenPassEnabled" "1"

	"$sheenmap" 		"cubemaps\cubemap_sheen001"
	"$sheenmapmask" 		"Effects\AnimatedSheen\animatedsheen0"
	"$sheenmaptint" 		"[ 1 1 1 ]"
	"$sheenmapmaskframe" 	"0"
	"$sheenindex" 		"0"

	"$yellow" "0"
	"Proxies"
	{
		"AnimatedWeaponSheen"
		{
			"animatedtexturevar" 		"$sheenmapmask"
			"animatedtextureframenumvar" 	"$sheenmapmaskframe"
			"animatedtextureframerate" 		"40"
		}
		"invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
	}
}

